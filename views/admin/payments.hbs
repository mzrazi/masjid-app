
    <div class="container my-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">User</th>
        <th scope="col">Address</th>
        <th scope="col">Amount</th>
        <th scope="col">Payment Status</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
      <tr>
        <td>{{this.user}}</td>
        <td>{{this.address}}</td>
        <td>{{this.amount}}</td>
        <td>{{this.payment_status}}</td>
        <td><a href="/edit/{{this._id}}" class="btn btn-primary">Edit</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>

