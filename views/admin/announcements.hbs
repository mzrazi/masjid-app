 <div class="container">
    <h1>Announcement Form</h1>
    <form action="/admin/send-notification" method="POST" class="container mt-5">
  <div class="form-group">
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required class="form-control">
  </div>

  <div class="form-group">
    <label for="message">Message:</label>
    <textarea id="message" name="message" rows="4" cols="50" required class="form-control"></textarea>
  </div>

  <div class="form-group">
    <label for="users">Select users:</label>
    <select id="users" name="selectedUsers"  class="form-control">
      <option value="all">All users</option>
      {{#each users}}
        <option value="{{this._id}}">{{this.FirstName}} {{this.LastName}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Send notification</button>
</form>


  </div>